<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:background="#00000000"
    android:layout_height="match_parent">

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        style="@style/Widget.Neumorph.CardView"
        app:neumorph_shadowColorLight="@color/border"
        app:neumorph_shadowColorDark="@color/border"
        app:neumorph_backgroundColor="@color/grays"
        app:neumorph_shapeType="pressed"
        app:neumorph_shadowElevation="6dp"
     >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    >



    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:src="@drawable/car2"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/carName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="22dp"
        android:gravity="center"
        android:text="car Name"
        android:textColor="@color/black"

        android:textSize="18sp"
        />

        <TextView
            android:id="@+id/carNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="22dp"
            android:gravity="center"
            android:text="car Number"
            android:textColor="@color/black"

            android:textSize="18sp"

            />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FCACADB5"/>
        <TextView
            android:id="@+id/doneBtnaction"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Done"
            android:textColor="@color/green"
            android:backgroundTint="@color/gray"
            android:textSize="19sp"
android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textAlignment="center"
            />

    </LinearLayout>


</LinearLayout>

    </soup.neumorphism.NeumorphCardView>

</RelativeLayout>